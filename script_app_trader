select * from android;
select * from apple;

--ADDING COLUMN PLATFORM AND POPULATING
ALTER TABLE APPLE
ADD PLATFORM TEXT;
UPDATE ANDROID
SET PLATFORM='GOOGLE';

--CHANGING VARIABLE TYPE
ALTER TABLE ANDROID ALTER COLUMN price TYPE MONEY using price::text::MONEY;
ALTER TABLE APPLE ALTER COLUMN price TYPE MONEY using price::text::MONEY;
--ENDED UP CHANGING ALL TO TEXT IN PROPERTIES

--UNION ALL OF TABLES
SELECT *
FROM ANDROID
UNION ALL
SELECT *
FROM APPLE
ORDER BY PLATFORM DESC;
--ENDED UP USING FULL JOIN INSTEAD

--FULL JOIN OF THE ANDROID AND APPLE TABLES
SELECT *
FROM apple FULL JOIN android
USING (name)
WHERE apple.price IS NOT NULL
AND android.price IS NOT NULL;







